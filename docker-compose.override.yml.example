# Docker Compose Override 예제
# 이 파일을 docker-compose.override.yml로 복사하여 사용하세요
# docker-compose는 자동으로 이 파일을 읽습니다

version: '3.8'

services:
  # 개발 환경에서 볼륨 마운트 활성화
  backend:
    volumes:
      - ./backend/app:/app/app
      - ./common:/app/common
      - ./agent:/app/agent
    environment:
      - DEBUG=true

  frontend:
    volumes:
      - ./frontend:/app
      - /app/node_modules
      - /app/.next
    environment:
      - NODE_ENV=development

  agent:
    volumes:
      - ./agent:/app/agent
      - ./common:/app/common
    environment:
      - DEBUG=true

